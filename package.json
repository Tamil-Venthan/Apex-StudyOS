{
  "name": "apex-study-tracker",
  "version": "1.2.0",
  "description": "Your Complete Study Companion for CMA/CA Exam Preparation",
  "main": "./out/main/index.js",
  "author": "Tamil Venthan",
  "homepage": "https://github.com/Tamil-Venthan/Apex-StudyOS",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tamil-Venthan/Apex-StudyOS.git"
  },
  "bugs": {
    "url": "https://github.com/Tamil-Venthan/Apex-StudyOS/issues"
  },
  "keywords": [
    "electron",
    "study-tracker",
    "productivity",
    "pomodoro",
    "education",
    "exam-preparation",
    "desktop-app",
    "react",
    "typescript"
  ],
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && npx electron-builder --dir",
    "build:win": "npm run build && npx electron-builder --win",
    "build:mac": "electron-vite build && npx electron-builder --mac",
    "build:linux": "electron-vite build && npx electron-builder --linux",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "build": {
    "appId": "com.apex.studytracker",
    "productName": "Apex StudyOS",
    "asar": false,
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      "prisma/dev.db"
    ],
    "asarUnpack": [],
    "files": [
      "out/**/*",
      "resources/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "Tamil-Venthan",
      "repo": "Apex-StudyOS"
    }
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@tanstack/react-query": "^5.90.17",
    "@tiptap/react": "^3.15.3",
    "@tiptap/starter-kit": "^3.15.3",
    "better-sqlite3": "^12.6.2",
    "canvas-confetti": "^1.9.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.7.3",
    "framer-motion": "^12.26.2",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "lucide-react": "^0.562.0",
    "react-hot-toast": "^2.6.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.12.0",
    "recharts": "^3.6.0",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.11.1",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^22.19.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "electron": "^40.0.0",
    "electron-installer-squirrel-windows": "^1.3.0",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwindcss": "3.4.19",
    "typescript": "^5.9.3",
    "vite": "^7.2.6"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true,
        "extraResource": [
          "prisma/dev.db"
        ],
        "ignore": [
          "^/src",
          "^/.vscode",
          "^/electron.vite.config.ts",
          "^/tsconfig.*",
          "^/postcss.config.js",
          "^/tailwind.config.js",
          "^/eslint.config.mjs",
          "^/.gitignore",
          "^/.editorconfig",
          "^/README.md",
          "^/dist",
          "^/release"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "ApexStudyOS",
            "setupExe": "Apex-StudyOS-Setup.exe"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "win32"
          ]
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "Tamil-Venthan",
              "name": "Apex-StudyOS"
            },
            "prerelease": false
          }
        }
      ]
    }
  }
}